FLAGS = -fglasgow-exts -funbox-strict-fields -dcore-lint
ifeq (@(PROFILE),y)
FLAGS += -prof -auto-all
endif
ifeq (@(TEST),y)
FLAGS += -fhpc
endif
ifeq (@(THREADED),y)
FLAGS += -threaded
endif
ifeq (@(OPT),y)
FLAGS += -O -optc-O3 -optc-march=native
endif

!HC = |> ^ GHC %f^ ghc $(FLAGS) $(import_path) -c %f |> %B.o %B.hi
!LINK = | %B.hi |> ^ LINK %f^ ghc $(import_path) %B.hs --make |> %B
